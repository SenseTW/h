{% extends "h:templates/layouts/base.html.jinja2" %}

{% block header %}
  {% include "h:templates/includes/logo-header.html.jinja2" %}
{% endblock %}

{% block page_title %}
{% trans %} Reset your password {% endtrans %}
{% endblock %}

{% block content %}
<div class="form-container content">
  <h1 class="form-header">{% trans %} Reset your password {% endtrans %}</h1>
  {{ form }}
  <footer class="form-footer">
    {% trans %} Already know your password? {% endtrans %}
    <a class="link--footer" href="{{ request.route_path('login') }}">Log in</a>
  </footer>
</div>
{% endblock content %}
